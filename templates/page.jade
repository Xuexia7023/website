doctype html
html(xmlns='http://www.w3.org/1999/xhtml', dir='ltr')
    block page_vars
        -var menu = 'Home';
        -var title = '';
        if page.metadata.menu
            -menu = page.metadata.menu
        if page.metadata.title
            -title = "| " + page.metadata.title
    head
        block head
            meta(http-equiv='content-type', content='text/html; charset=UTF-8')
            meta(name='description', content='')
            meta(name='keywords', content='')
            meta(name='author', content='')
            script(type="text/javascript")
                | var _gaq = _gaq || [];
                |  _gaq.push(['_setAccount', 'UA-309424-10']);
                |  _gaq.push(['_trackPageview']);
                | (function() {
                | var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                | ga.src = ('https:' == document.location.protocol ? 'https://ssl' :
                | 'http://www') + '.google-analytics.com/ga.js';
                | var s = document.getElementsByTagName('script')[0];
                | s.parentNode.insertBefore(ga, s);
                | })();
        link(rel='stylesheet', type='text/css', href='/css/bootstrap.css', media='screen')
        link(rel='stylesheet', type='text/css', href='/css/vot.css', media='screen')
        title VOT Challenge  
            = title

    body
        #header
            .navbar.navbar-default.navbar-static-top(role='navigation')
                .container
                    .navbar-header

                        a(class='navbar-brand' href='/')
                            img(src='/img/logo_website.png' alt='VOT challenge') 

                    -var menu_items = { 'Home': '/index.html', 'Tutorials': '/howto/', 'Challenges': '/challenges.html'};
                    ul(class='nav navbar-nav nav-collapse' id='menu')
                        each val, key in menu_items
                            if menu == key
                                li.active
                                    a(href=val)= key
                            else
                                li
                                    a(href=val)= key
                    div(class='navbar-text navbar-right' id='icons')
                        a(class='navbar-github' href='https://github.com/votchallenge')
                            img(src='/img/github.png' alt='Github') 
                #submenu
                    .center_wrapper
                        block submenu

        .container
            block main
            #main.left
                #main_content
